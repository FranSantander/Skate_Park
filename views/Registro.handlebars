    <h1>Skate Park</h1>
    
<div class="py-4">
  <h2>Registro</h2>
  <hr class="w-50 mx-auto" />

  <form id="form" enctype="multipart/form-data" method="post" action="/registrar">

    <div class="form-group row w-50 mx-auto mb-3">
      <div class="form-group col-12 col-sm-6">
        <label class="mb-2">Email</label>
        <input id="email" name="email" class="form-control mx-auto mb-3" required />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label class="mb-2">Nombre</label>
        <input id="nombre" name="nombre" class="form-control mx-auto mb-3" required />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label class="mb-2">Password</label>
        <input type="password" id="password" name="password" class="form-control mx-auto mb-3" required />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label class="mb-2">Repita la password</label>
        <input type="password" id="password2" name="password2" class="form-control mx-auto mb-3" required />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label class="mb-2">Años de experiencia</label>
        <input id="experiencia" name="experiencia" class="form-control mx-auto mb-3" required />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label class="mb-2">Especialidad</label>
        <input id="especialidad" name="especialidad" class="form-control mx-auto mb-3" required />
      </div>
      <div class="form-group col-12 col-sm-12">
        <label>Foto de perfil</label>
        <input id="foto" name="foto" type="file" required />
      </div>
    </div>
    <button type='submit' class="btn btn-info mb-3">Registrarme</button>
    <p><a href="/login"> Iniciar sesión</a></p>
  </form>
</div>

<script>
  $('button').click(async (e) => {
    e.preventDefault();
    const password = $('#password').val();
    const password2 = $('#password2').val();
    if (password !== password2) {
      alert('Las contraseñas no coinciden');
    } else {
      alert('Registro exitoso');
      $('#form').submit();
    }
  })
</script>